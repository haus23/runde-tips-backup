{
  "include": ["**/*.ts", "**/*.tsx"],

  "compilerOptions": {
    // Source
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "strict": true,
    "verbatimModuleSyntax": true,

    // Bundler
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "allowJs": true,

    // Best practices
    "forceConsistentCasingInFileNames": true,

    // DX
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
